-- See if table exists
SELECT name FROM sqlite_master WHERE type='table' AND name='realStorage'

-- Init
CREATE TABLE IF NOT EXISTS realStorage (key TEXT PRIMARY KEY, value TEXT)

-- setItem()
INSERT OR REPLACE INTO realStorage VALUES (?, ?)

-- getItem()
SELECT value FROM realStorage WHERE key=?

-- removeItem()
DELETE FROM realStorage WHERE key=?

-- length
SELECT COUNT(*) FROM realStorage

-- key()
SELECT key FROM realStorage LIMIT 1 OFFSET ?


